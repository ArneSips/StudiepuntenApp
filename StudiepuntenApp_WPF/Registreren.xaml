<Window x:Class="StudiepuntenApp_WPF.Registreren"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudiepuntenApp_WPF"
        mc:Ignorable="d"
        Title="Registreren" Height="350" Width="500">
    <Window.Background>
        <ImageBrush ImageSource="images/b2.jpg"/>
    </Window.Background>
    <Grid>
        <TextBox x:Name="txtRegisterNaam" HorizontalAlignment="Left" Height="23" Margin="188,108,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="txtRegisterWachtwoord" HorizontalAlignment="Left" Margin="188,136,0,0" VerticalAlignment="Top" Width="120" Height="23"/>
        <Label Content="Naam:" HorizontalAlignment="Left" Margin="77,108,0,0" VerticalAlignment="Top" Width="85" Height="23" Background="Red" FontWeight="Bold"/>
        <Label Content="Wachtwoord:" HorizontalAlignment="Left" Margin="77,136,0,0" VerticalAlignment="Top" Height="23" Background="Red" FontWeight="Bold"/>
        <Button x:Name="btnRegisterAccount" Content="Maak account" HorizontalAlignment="Left" Margin="188,165,0,0" VerticalAlignment="Top" Width="120" Click="BtnRegisterAccount_Click"/>
    </Grid>
</Window>
